<div class="owl-carousel">
  <div>
  <%= image_tag "carousel/WEBSITE-CAROUSEL-1.png", class: "d-block" %>
  </div>
  <div>
    <%= image_tag "carousel/WEBSITE-CAROUSEL-2.png", class: "d-block" %>
  </div>
  <div>
    <%= image_tag "carousel/WEBSITE-CAROUSEL-3.png", class: "d-block" %>
  </div>
</div>

<script>
  $(document).ready(function(){
    $(".owl-carousel").owlCarousel({
      loop:true,
      items: 1,
      mouseDrag:false,
      touchDrag:false,
      autoplay:true,
      autoplayTimeout:4000,
      animateOut: 'fadeOut'
    });
  });
</script>