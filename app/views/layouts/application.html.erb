<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'application/favicon' %>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <div class="bg-inverse py-1">
      <div class="container">
        <div class="d-flex align-items-start">
          <span class="mr-auto text-silent">Faithful Word Baptist Church - Tempe, AZ</span>
          <%= link_to "https://www.truebornsons.com/donate-to-fwbc/", class: "yellow-btn", target: "_blank" do %>
            DONATE &rsaquo;
            <% end %>
        </div>
      </div>
    </div>
    <%= render 'shared/navigation' %>
    <%= yield %>
    <%= render 'layouts/footer' %>
  </body>
</html>
