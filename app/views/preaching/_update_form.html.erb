<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <h5 class="modal-title" id="exampleModalLabel">Update Sermon</h5>
        <%= form_for @sermon, url: sermons_path, method: 'POST',  html: { class: 'directUpload', data: { 'form-data' => (@s3_direct_post.fields), 'url' => @s3_direct_post.url, 'host' => URI.parse(@s3_direct_post.url).host } } do |f| %>
          <div class="form-group">
            <%= f.label :mp3 %>
            <%= f.file_field :mp3, class: "directField" %>
          </div>
        <% end %>
        <%= form_for @sermon, url: "/sermons/#{@sermon.id}", method: :patch do |f| %>
          <div class="row">
            <div class="col-6">
              <div class="form-group">
                <%= f.label :datetime %>
                <%= f.datetime_local_field :datetime, class: "form-control form-control-sm" %>
              </div>
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control form-control-sm", type: "text", placeholder: "Title of Sermon", autofocus: true %>
              </div>
              <div class="form-group">
                <%= f.label :preacher %>
                <%= f.text_field :preacher, class: "form-control form-control-sm", type: "text", placeholder: "Preacher" %>
              </div>
              <%= f.label :ytube_id, "YouTube ID" %>
              <div class="input-group input-group-sm">
                <span class="input-group-addon">www.youtube.com/watch?v=</span>
                <%= f.text_field :ytube_id, class: "form-control" %>
              </div>
              <br>
              <div class="form-group">
                <%= f.label :scloud, "Soundcloud URL" %>
                <%= f.text_field :scloud, class: "form-control form-control-sm", placeholder: "Soundcloud URL" %>
              </div>
              <div class="form-group">
                <%= f.label :location %>
                <%= f.text_field :location, class: "form-control form-control-sm", type: "text", placeholder: "Location" %>
              </div>
              <div class="form-group">
                <%= f.label :mp3 %>
                <%= f.text_field :mp3, class: "form-control form-control-sm", type: "text", id: "mp3Key" %>
              </div>
              <div class="form-group">
                <%= f.label :format %>
                <%= f.select :format, ['Preaching', 'Documentary', 'Series'], {}, class: "form-control form-control-sm" %>
              </div>
              <div class="form-check">
                <%= f.label :fire_hard do %>
                  <%= f.check_box :fire_hard %>
                  <%= image_tag 'fire.gif' %> Hard
                <% end %>
              </div>
            <%= f.submit "Update", class: "sky-btn" %>
            </div>
            <div class="col-6">
              <div class="form-group">
                <%= f.label :transcript %>
                <%= f.text_area :transcript, class: "form-control form-control-sm", rows: 35 %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  $(function() {
      var fileInput    = $('.directField');
      var form         = $(fileInput.parents('form:first'));
      var submitButton = $('input[type="submit"]');
      var progressBar  = $("<div class='load-bar'></div>");
      var barContainer = $("<div class='progress'></div>").append(progressBar);
      fileInput.after(barContainer);
      $('.directUpload').fileupload({
      fileInput:       fileInput,
      url:             form.data('url'),
      type:            'POST',
      autoUpload:       true,
      formData:         form.data('form-data'),
      paramName:        'file', // S3 does not like nested name fields i.e. name="user[avatar_url]"
      dataType:         'XML',  // S3 returns XML if success_action_status is set to 201
      replaceFileInput: false,
      progressall: function (e, data) {
        var progress = parseInt(data.loaded / data.total * 100, 10);
        progressBar.css('width', progress + '%')
      },
      start: function (e) {
        submitButton.prop('disabled', true);
        barContainer.show();
        progressBar.
          css('background', 'green').
          css('display', 'block').
          css('width', '0%').
          text("Loading...");
      },
      done: function(e, data) {
        submitButton.prop('disabled', false);
        progressBar.text("Uploading done");

        // extract key and generate URL from response
        var key   = $(data.jqXHR.responseXML).find("Key").text();
        var url   = '//' + form.data('host') + '/' + key;

        // create hidden field
        $('#mp3Key').val(url);
      },
      fail: function(e, data) {
        submitButton.prop('disabled', false);

        progressBar.
          css("background", "red").
          text("Failed");
      }
    });
  });
</script>