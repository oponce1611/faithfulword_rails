<div class="container">
  <%= form_for @sermon, url: "/sermons/#{@sermon.id}", method: :patch do |f| %>
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <%= f.label :datetime %>
          <%= f.datetime_local_field :datetime, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :preacher %>
          <%= f.text_field :preacher, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :mp3 %>
          <%= f.file_field :mp3, class: "form-control-file" %>
        </div>
      
        <%= f.label :ytube_id, "YouTube ID" %>
        <div class="input-group">
          <span class="input-group-addon">https://www.youtube.com/watch?v=</span>
          <%= f.text_field :ytube_id, class: "form-control" %>
        </div>
        <br>
        <div class="form-group">
          <%= f.label :scloud, "Soundcloud URL" %>
          <%= f.text_field :scloud, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :location %>
          <%= f.text_field :location, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :format %>
          <%= f.select :format, ['Preaching', 'Documentary', 'Series'], {}, class: "form-control" %>
        </div>
        
        <div class="form-check">
          <%= f.label :fire_hard do %>
            <%= f.check_box :fire_hard %>
            <%= image_tag 'fire.gif' %> Hard
          <% end %>
        </div>
      </div>
      
      <div class="col-6">
        <div class="form-group">
          <%= f.label :transcript %>
          <%= f.text_area :transcript, class: "form-control", rows: 30 %>
        </div>
      </div>
      
    </div>
    
    <div class="form-group">
      <%= f.submit 'Update', class: "sky-btn" %>
    </div>
    
  <% end %>
</div>