<% if sermon.datetime.mon != next_month(sermon.datetime) %> 
<tr>
  <td colspan="10"> <h5 class="mb-0"><%= sermon.datetime.strftime(" %B %Y") %></h5></td>
</tr>
<% end %>
<tr>
  <td scope="row"><%= sermon.datetime.strftime("%m/%d/%y, %a %p")%></td>
  <td><%= image_tag 'fire.gif', style: "padding-right: 8px" if sermon.fire_hard %><%= link_to sermon.title, sermon_path(sermon) %></td>
  <td><%= sermon.preacher %></td>
  <td>
    <div class="">
      <%= link_to file_sermon_path(sermon), target: "_self" do %>
        <%= image_tag "icons/mp3_16x16.gif"%>
      <% end %>
      <% if !sermon.ytube_id.nil? %>
        <%= link_to "https://www.youtube.com/watch?v=#{sermon.ytube_id}" do %>
          <%= image_tag "icons/ytube_16x16.gif"%>
        <% end %>
      <% end %>
      <% if !sermon.scloud.nil? %>
        <%= link_to "#{sermon.scloud}" do %>
          <%= image_tag "icons/soundcloud_16x16.gif"%>
        <% end %>
      <% end %>
    </div>
  </td>
</tr>