<% provide(:title, "Preaching") %>
<%= render 'new_form' %>
<%= render "shared/banner" %>
<h4>Sermons from Faithful Word Baptist Church</h4>
<p>
  Are you tired of boring preaching? Check back in the future for more independent, fundamental, King James Bible Only Baptist preaching.
</p>
<%= link_to 'DONATE NOW', 'https://www.truebornsons.com/donate-to-fwbc/', class: "sky-btn mb-2" %>
<button type="button" class="sky-btn mb-2" data-toggle="modal" data-target="#exampleModal">Upload Sermon</button>
<br>
<div class="d-flex flex-row">
  <div class="mr-auto">
    <% @years.reverse.each do |year|  %>
      <%= link_to "#{year}", preaching_path(year: year), class: "yellow-btn mb-2" %>
    <% end %>
  </div>
  <%= form_tag preaching_path, :method => 'get', :id => "sermon_search"  do %>
  <div class="form-inline">
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag 'Search', :name => nil %>
  </div>
  <% end %>
</div>

<div id="sermons">
  <%= render 'sermons' %>
</div>

