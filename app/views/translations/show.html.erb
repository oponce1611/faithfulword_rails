<h4><%= @translation.title %></h4>
<%#= link_to "Edit", edit_translation_path(@translation.language, @translation), class: "btn btn-primary mr-1" %>
<%#= link_to "Delete", "", class: "btn btn-danger mr-1" %>
<h6 class="text-muted"><%= @translation.published.strftime("%A %B %d, %Y")%></h6>
<% if !@translation.video_id.blank? %>
  <div class="mb-2">
  <%= ytube_embed(@translation.video_id, 720, 405) %>
  </div>
<% end %>
<h5>Transcript:</h5>
<p><%= simple_format(@translation.body) %></p>