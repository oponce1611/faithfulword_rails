<h4>Login</h4>

<%= form_for :session, url: secretlogin_path, method: 'POST' do |f| %>
  <div class="form-group">
    <%= f.text_field :user, class: "form-control", type: "text", placeholder: "User", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password" %>
  </div>
  <%= f.submit "Login", class: "sky-btn" %>
<% end %>