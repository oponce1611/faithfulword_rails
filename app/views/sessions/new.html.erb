<div id="login">
  <h4 style="text-align: center">Administrator</h4>
  <%= form_for :session, url: secretlogin_path, method: 'POST' do |f| %>
    <div class="form-group">
      <%= f.text_field :user, class: "form-control", type: "text", placeholder: "Username", value: 'Admin' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password", autofocus: true %>
    </div>
    <%= f.submit "Login", class: "login-btn" %>
  <% end %>
</div>